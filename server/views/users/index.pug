extends ../layouts/application.pug

block content
  h1.display-4.fw-bold.my-4= t('views.users.header')
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.email')
        th= t('views.users.createdAt')
    tbody
      each user in users
        tr
          td= user.id
          td= user.email
          td= formatDate(user.createdAt)


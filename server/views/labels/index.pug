extends ../layouts/application.pug

block content
  h1.display-4.fw-bold.mt-4= t('views.labels.header')
  a.btn.btn-primary.mb-5(href='labels/new')= t('views.labels.entities.createLabel')
  .table-responsive  
    table.table.table-borderless.table-striped.mt-5
        thead
        tr
            th= t('views.labels.entities.id')
            th= t('views.labels.entities.name')
            th= t('views.labels.entities.createdAt')
        tbody
        each label in labels
            tr
            td= label.id
            td= label.name
            td= formatDate(label.createdAt)
            td
                div.d-flex
                    a.btn.btn-primary.me-1(href=`/labels/${label.id}/edit`)= t('views.labels.entities.edit')
                    form(action=`/labels/${label.id}`, method='post')
                        input(name='_method', type='hidden', value='delete')
                        input(class='btn btn-danger' type='submit' value=t('views.labels.entities.delete'))
extends ../layouts/application.pug

block content
  h1.display-4.fw-bold.mt-4= t('views.statuses.header')
  a.btn.btn-primary(href='statuses/new')= t('views.statuses.createStatus')
  table.table.table-striped.mt-5
    thead
      tr
        th= t('views.statuses.id')
        th= t('views.statuses.name')
        th= t('views.users.createdAt')
    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td= formatDate(status.createdAt)
